<div class="d-flex justify-content-center m-5">
    <form action="/admin/login" method="post" class="col-4 p-5 border border-light">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label d-flex justify-content-center">Usuario:</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="usuario">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label d-flex justify-content-center">Contraseña:</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="password">
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary col-12">Entrar</button>
    </div>
    
    {{#if error}}
        <p class="text-danger" style="font-size: 0.8rem;">Usuario y/o contraseña incorrectos</p>
    {{/if}}
</form>
</div>

