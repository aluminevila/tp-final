<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="p-5 m-5 border border-light">
            <h5>Modificar entrada:</h5>
            <form action="/admin/administrador/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{foto.id}}" name="id">
                <div class="form-group">
                    <label for="">TÃ­tulo:</label>
                    <input type="text" class="form-control" name="titulo" value="{{foto.titulo}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Foto:
                            <input type="file" class="form-control" name="foto" id="foto">
                        </label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual</label>
                        <input type="hidden" name="img_original" value="{{foto.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary col-12">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>